<Window x:Class="IMDB2025.WPF.Windows.MovieDetailsSimple"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMDB2025.WPF.Windows"
        mc:Ignorable="d"
        Title="MovieDetailsSimple" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" Grid.Column="0">
            <TabItem Header="Basic Info">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Title" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="10" />
                    <TextBlock Text="Genre" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="10" />
                    <TextBlock Text="Release Year" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="10" />

                    <TextBox FontSize="20" Grid.Row="0" Grid.Column="1" Margin="10" Text="{Binding Path=Movie.Title}" />
                    <ComboBox Grid.Row="1" 
                   Grid.Column="1" 
                   Margin="10" 
                   ItemsSource="{Binding Path=Genres}" 
                   DisplayMemberPath="Name" 
                   SelectedValuePath="GenreId" 
                   SelectedValue="{Binding Path=Movie.Genre.GenreId}" />
                    <TextBox 
                 FontSize="20" 
                 Grid.Row="2" Grid.Column="1" Margin="10" Text="{Binding Path=Movie.ReleaseDate, StringFormat=\{0:d\}}" />

                </Grid>
            </TabItem>
        </TabControl>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center">
            <Button Content="Cancel" IsCancel="True" Width="150" Margin="20" />
            <Button Content="Save" Width="150" Margin="20" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
